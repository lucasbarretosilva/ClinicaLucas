@model ClinicaLucas.Models.Exame

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>Exame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label">Observações</label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoExameId" class="control-label">Tipo de Exame</label>
                @Html.DropDownListFor(model => model.TipoExameId, ViewData["TipoExameId"] as SelectList, "Selecione o Tipo de Exame", new { @class = "form-control" })
            </div>
            <div class="form-group" style="padding:10px">
                <input type="submit" value="Cadastrar" class="btn btn-primary" /> | 
                 <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
